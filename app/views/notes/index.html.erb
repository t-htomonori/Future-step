<div class="content">
<p id="notice"><%= notice %></p>

<h1>体験談＆レビュー</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr class="note_post">
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><%= link_to '削除', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn index-btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_note_path, class: "btn newpost-btn" %>
