<div class="header"></div>

<div class="slideshow">
<div class="slider-pro" id="my-slider">
    <div class="sp-slides">
        <!-- Slide 1 -->
        <div class="sp-slide">
            <%= image_tag '/assets/英語.png',:size => '950x450' %>
        </div>

        <!-- Slide 2 -->
        <div class="sp-slide">
            <%= image_tag '/assets/programming1.png',:size => '950x450' %>
