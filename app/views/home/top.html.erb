        </div>



    </div>
    </div>
    </div>
    <script type="text/javascript">
    $( document ).ready(function( $ ) {
        $( '#my-slider' ).sliderPro({
            width: 960,
            height: 450,
            arrows: true,
            buttons: true,
            waitForLayers: true,
            thumbnailWidth: 200,
            thumbnailHeight: 100,
            thumbnailPointer: true,
            autoplay: true,
            autoScaleLayers: true,
            breakpoints: {
                500: {
                    thumbnailWidth: 120,
                    thumbnailHeight: 50
                }
            }
        });
    });
</script>
</div>
